<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user,book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @user.get_profile_image.variant(resize: "100x100!") %>
                <p><%= @user.name %></p>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book_show.id) do %>
                <%= @book_show.title %>
              <% end %>
            </td>
            <td>
              <%= @book_show.body %>
            </td>
            <% if @user == current_user %>
              <td>
                <%= link_to "Edit",edit_book_path(@book_show.id), class: 'btn btn-sm btn-success' %>
              </td>
              <td>
                <%= link_to "Destroy",book_path(@book_show.id),method: :delete, "data-confirm" => "本当に消しますか？",class: 'btn btn-sm btn-danger' %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>