<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', user: @user,book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |books| %>
            <tr>
              <td>
                <%= link_to user_path(books.user_id) do %>
                  <%= image_tag books.user.get_profile_image.variant(resize: "80x80!") %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(books.id) do %>
                  <%= books.title %>
                <% end %>
              </td>
              <td><%= books.body %></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  
  
</div>